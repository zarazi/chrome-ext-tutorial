{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "64": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  },
    
  "content_scripts":[
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myScript.js"]
    }
  ],

  "permissions": [
    "contextMenus",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://script.google.com/"
  ]
}
