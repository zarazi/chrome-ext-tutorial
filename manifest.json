{
  "manifest_version": 2,

  "name": "Saving content to KK-Pedia",
  "description": "This extension allow saving content to KK-Pedia",
  "version": "1.0",
  "icons": {
    "16": "kk-black-16.png",
    "32": "kk-black-32.png",
    "64": "kk-black-64.png",
    "128": "kk-black-128.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "kk-black-16.png"
  },

  "content_scripts":[
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["myScript.js"]
    }
  ],
  "web_accessible_resources": [
      "kk-popup-frame.html",
      "kk-popup-frame.js"
  ],

  "permissions": [
    "contextMenus",
    "activeTab",
    "notifications",
    "https://ajax.googleapis.com/",
    "https://script.google.com/"
  ]
}
